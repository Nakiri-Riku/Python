def calc():
  altura = float(input("Insira a sua altura (Exemplo, 1.82):"))
  sexo = input("Insira o seu sexo: M ou F")
  peso = 0
  
  if sexo == 'M':
    peso = 72.7 * altura - 58
    print(f"Peso ideal: {peso}KG")


  elif sexo == 'F':
    peso = 62.1 * altura - 44.7
    print(f"Peso ideal: {peso}KG")

  else:
    print("Sexo invalido! Tente novamente.")

calc()